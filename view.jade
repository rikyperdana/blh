template(name='layout')
	body
		header
			+menu
		main
			+yield
		footer
			+footer

template(name='menu')
	nav.green.darken-2: .nav-wrapper
		ul.left
			li: a(href='/') Beranda
			li: a.dropdown-button(data-activates='menuTentang') Tentang
			li: a.dropdown-button(data-activates='menuPeraturan') Peraturan
			li: a.dropdown-button(data-activates='menuDokumen') Dokumen
		a.brand-logo.center Bidang Penaatan & Penataan Lingkungan BLH
		ul.right
			li: a= userEmail
			unless loggedIn
				li: a(href='/sign-in') Login
			if loggedIn
				li: a(href='/sign-out') Logout
	ul.green.darken-2.dropdown-content#menuTentang
		li: a.white-text Profil
	ul.green.darken-2.dropdown-content#menuPeraturan
		li: a.white-text(href='/rpplh') RPPLH
		li: a.white-text(href='/klhs') KLHS
	ul.green.darken-2.dropdown-content#menuDokumen
		li: a.white-text(href='/slhd') SLHD
		li: a.white-text(href='/pengaduan') Pengaduan
		li: a.white-text(href='/amdal') Amdal
		li: a.white-text(href='/uklupl') UKL UPL
		li: a.white-text(href='/perizinan') Perizinan

