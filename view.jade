template(name='blog')

	section.green.darken-3
		.container
			.row
				.col.m9
					h1.header.white-text Halaman {{categoryTitle}}
					.divider
					h4.light.white-text Berisi daftar dokumen yang berhubungan dengan {{categoryTitle}}
			.row

	unless editData
		unless readData
			.row: .container: .btn.right#showAdd Tambah
	if showAdd
		+insert
	if editData
		+edit
	if readData
		+read

	unless formMode
		.container
			.row
				each datas
					.col.m4
						.card.grey.lighten-4
							.card-content
								.card-title= title
								p= text
							.card-action
								a.blue-text#read Baca
								if loggedIn
									a.red-text.right#remove Hapus
									a.green-text.right#edit Ubah

template(name='page')
	.container
		.row
			.col.m12
				.section
					h2.header Material Design
					span.mdi.mdi-home
					span.blue-text 12 Jan 2017
					.divider
				p.flow-text contoh teks untuk masuk dalam paragraf

template(name='insert')
	.container
		h3 Tambah Data
		.row
		+quickForm(
			collection= theColl
			schema= theSchema
			type= 'insert'
			id= 'insertData'
		)

template(name='edit')
	.container
		h3 Ubah Data
		.row
		+quickForm(
			collection= theColl
			schema= theSchema
			type= 'update'
			id= 'updateData'
			doc= data
		)
		.btn.right#close Tutup

template(name='read')
	.container
		with data
			h2= title
			span: i.mdi.mdi-calendar
			span= date
			p.flow-text= text
		with file
			span: i.mdi.mdi-download
			a(href= url target='_blank')= name
			img.materialboxed(src= url width='500')
		.btn.right#close Tutup

template(name='footer')
	footer.page-footer.green.darken-2
		.container
			.row
				.col.l6.s12
					h5.white-text Kontak Dinas
					p.white-text You can use rows and columns here to organize your footer content
				.col.l4.offset-l2.s12
					h5.white-text Alamat Lainnya
					ul
						li: a.white-text Link 1
						li: a.white-text Link 2
		.footer-copyright
			.container
				span 2017 Hak Cipta Milik Dinas Lingkungan Hidup & Kehutanan Provinsi Riau
				a.white-text.right More Links

