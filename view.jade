template(name='blog')

	section.green.darken-3
		.container
			.row
				.col.m9
					h4.header.white-text= category.title
					.divider
					h6.light.white-text.truncate= category.desc
					span.white-text#expand ...lanjut
			.row

	unless formMode
		if loggedIn
			.row: .container: .btn.right#showAdd Tambah
		if routeIs 'slhd'
			unless loggedIn
				.row: .container: .btn.right#showAdd Tambah

	if showAdd
		+insert
	if editData
		+edit
	if readData
		+read

	unless formMode
		.container
			.row
				each datas
					.col.m4
						.card.grey.lighten-4
							.card-content
								.card-title= title
								p= short
							.card-action
								a.blue-text#read(href='#') Baca
								if loggedIn
									a.red-text.right#remove(href='#') Hapus
									a.green-text.right#edit(href='#') Ubah

template(name='insert')
	.container
		h3 Tambah Data
		.row
		+quickForm(
			collection= theColl
			schema= theSchema
			type= 'insert'
			id= 'insertData'
		)
		.btn.right#close Tutup

template(name='edit')
	.container
		h3 Ubah Data
		.row
		+quickForm(
			collection= theColl
			schema= theSchema
			type= 'update'
			id= 'updateData'
			doc= data
		)
		.btn.right#close Tutup

template(name='read')
	.container
		with data
			h2= title
			span: i.mdi.mdi-calendar
			span= date
			p.flow-text: {{{text}}}
		ul.collection.with-header
			li.collection-header: h6 Daftar Lampiran
			each files
				li.collection-item
					a(href= url target='_blank')= name
					if isImage
						img.materialboxed(src= url width='500')
		.btn.right#close Tutup

