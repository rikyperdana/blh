template(name='layout')
	head
		<meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no'/>
	body
		header
			+menu
		main
			+yield
		footer
			+footer

template(name='menu')
	nav.green.darken-2: .nav-wrapper
		a.brand-logo Dinas Lingkungan Hidup dan Kehutanan Provinsi Riau
		ul.right
			li: a(href='/') Beranda
			li: a.dropdown-button(data-activates='menu1') Profil
			li: a.dropdown-button(data-activates='menu2') Perencanaan Lingkungan
			li: a.dropdown-button(data-activates='menu3') Kajian Dampak Lingkungan
			li: a.dropdown-button(data-activates='menu4') L a p o r a n
			li: a.dropdown-button(data-activates='menu5') Download Dokumen
			li: a= userEmail
			unless loggedIn
				li: a(href='/sign-in') Login
			if loggedIn
				li: a(href='/sign-out') Logout
	ul.green.darken-2.dropdown-content#menu1
		li: a.white-text(href='/struktur') Struktur Organisasi
		li: a.white-text(href='/tupoksi') Tugas dan Fungsi
	ul.green.darken-2.dropdown-content#menu2
		each val in menuPerLing
			li: a.white-text(href=val.name)= val.title
	ul.green.darken-2.dropdown-content#menu3
		each val in menuAmdal
			li: a.white-text(href=val.name)= val.title
		each val in menuSemester
			li: a.white-text(href=val.name)= val.title
	ul.green.darken-2.dropdown-content#menu4
		each val in menuSlhd
			li: a.white-text(href=val.name)= val.title
		li.divider
		each val in menuLak
			li: a.white-text(href=val.name)= val.title
	ul.green.darken-2.dropdown-content#menu5
		li: a.white-text: b Menu Peraturan
		each val in menuPeraturan
			li: a.white-text(href=val.name)= val.title
		li.divider
		each val in kakSop
			li: a.white-text(href=val.name)= val.title

